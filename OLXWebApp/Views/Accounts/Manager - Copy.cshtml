@model LoginModel

@{
    ViewData["Title"] = "Управление аккаунтами";
    ViewData["PageTitle"] = "Управление аккаунтами";
}

<div>
    <form asp-action="AddAccount" asp-controller="Accounts" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div class="container">
            <div class="row">
                <div class="form-group col-4">
                    <input class="form-control" type="text" asp-for="Login" placeholder="Login" />
                    <span asp-validation-for="Login" />
                </div>
                <div class="form-group col-4">
                    <input class="form-control" asp-for="Password" placeholder="Password" />
                    <span asp-validation-for="Password" />
                </div>
                <div class="form-group col-4">
                    <input type="submit" value="Добавить аккаунт" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </form>
</div>


<div class="accounts-list container mt-3 mb-5">
    @foreach (var user in ViewBag.Users)
    {
    <div class="account-list-item shadow m-1 p-3 border border-primary rounded row">
        <div class="list-item-text col"><span>Login: </span>@user.Login</div>
        <div class="list-item-text col"><span>Password: </span>@user.Password</div>
        <a class="list-item-delete" href="/Accounts/DeleteAccount?id=@user.Id" id="account-@user.Id"></a>
    </div>
    }
    
</div>




