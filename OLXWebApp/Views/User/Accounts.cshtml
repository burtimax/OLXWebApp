        <section class="download_file_box" id="height_params">
            <form class="download_file_form" id="parameter">
                <p class="download_title">Загрузить объявления</p>
                <section class="box_1">
                    <p>Заголовок</p>
                    <input type="text" class="input_1" name="Title"/>
                </section>
                <section class="box_1">
                    <p>Описание</p>
                    <input type="text" class="input_1 desc_field" name="Description"/>
                </section>
                <section class="box_1">
                    <p>Параметры товара</p>
                    <input type="text" class="input_1 param_goods" name="ParamsString"/>
                </section>
                <section class="box_1">
                    <p>Город</p>
                    <input type="text" class="input_1" name="City"/>
                </section>
                <section class="box_5">
                    <section id="file_btn" onclick="getFile()">
                        <p>Фото</p>
                        <section class="right_clip">
                            <img src="~/src/assets/images/clip.png" class="clip" />
                        </section>
                    </section>
                    <section style='height: 0px;width: 0px; overflow:hidden;'>
                        <input id="upfile" type="file" value="upload" onchange="sub(this)" multiple name="photos" />
                    </section>
                </section>
                <input type="checkbox" id="hidden-checker" />
                <section class="box_1 parameter_btn block" onclick="change_height()">
                    <label class="block-toggler" for="hidden-checker"></label>
                    <p class="parameter_text">Дополнительные параметры</p>
                    <img src="~/src/assets/images/chevron_big_down.png" alt="chevron" class="chevron">
                </section>

                <section class="other_parameters hidden-block">
                    <section class="box_1" style="margin-left: 1vw">
                        <p>Категория</p>
                        <select class="input_1" name="Category">
                            <option value="1">Электроника</option>
                            <option value="2">Недвижимость</option>
                            <option value="3">Обмен</option>
                        </select>
                    </section>



                    <section class="box_1" style="margin-left: 1vw">
                        <p>Цена</p>
                        <input type="text" class="input_1" name="Price" />
                    </section>

                    <section class="box_1" style="margin-left: 1vw">
                        <p>Валюта</p>
                        <select class="input_1" name="Currency">
                            <option value="Grn">Грн</option>
                            <option value="Rub">Руб</option>
                            <option value="Dol">Доллар</option>
                        </select>
                    </section>


                    <section class="box_1" style="margin-left: 1vw">
                        <p>Состояние</p>
                        <select class="input_1" name="GoodState">
                            <option value="New">Новый</option>
                            <option value="Used">Б/У</option>
                        </select>
                    </section>

                    <div id="myDropdown2" class="dropdown-content2">
                        <a href="#">Новый</a>
                        <a href="#">Б/У</a>
                    </div>

                    <section class="box_1" style="margin-left: 1vw">
                        <p>Часное лицо/Бизнес</p>
                        <select class="input_1" name="Face">
                            <option value="Person">Частное лицо</option>
                            <option value="Business">Бизнес</option>
                        </select>
                    </section>




                    <section class="box_1" style="margin-left: 1vw">
                        <p>Местоположение</p>
                        <select class="input_1" name="Place">
                            <option value="1">Киев</option>
                            <option value="2">Львов</option>
                            <option value="2">Одесса</option>
                        </select>
                    </section>


                </section>
                <button class="down_btn">
                    <p>Загрузить</p>
                </button>
            </form>
        </section>
        <footer>
            <img src="~/src/assets/images/LOGO.png" alt="logo" class="footer_logo" />
            <section class="footer_text">
                <p>Настройки</p>
                <p>Сообщение</p>
                <p>Добавить акаунт</p>
                <p>Загрузить объявления</p>
            </section>
            <section class="footer_icons">
                <img src="~/src/assets/images/facebook.png" alt="facebook" class="footer_icon_size" />
                <img src="~/src/assets/images/twitter.png" alt="twitter" class="footer_icon_size" />
                <img src="~/src/assets/images/telegram.png" alt="telegram" class="footer_icon_size" />
            </section>
        </footer>
